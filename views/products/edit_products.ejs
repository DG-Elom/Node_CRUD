<%- include('../layouts/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Edit Product (<%= product.name %>)</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/products/update/<%= product._id %>" method="post" id="add-form"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control forma-control-lg"
                                    placeholder="Enter name" value="<%= product.name %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="price">Price</label>
                                <input type="number" name="price" class="form-control forma-control-lg"
                                    placeholder="Enter price" value="<%= product.price %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="stock">Number in stock</label>
                                <input type="number" name="stock" class="form-control forma-control-lg"
                                    placeholder="Enter stock" value="<%= product.stock %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="description">Description</label>
                                <input type="text" name="description" class="form-control forma-control-lg"
                                    placeholder="Enter description" value="<%= product.description %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="image">Select Image</label>
                                <input type="file" name="image" class="form-control form-control-lg">
                                <img src="/<%= product.image %>" width="100" class="img-thumbnail mt-1">
                                <input type="hidden" name="old_image" value="<%= product.image %>">
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" class="btn btn-success  btn-lg"
                                    value="Update Product">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layouts/footer') %>